@model BLL.Models.Bloco

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="panel panel-default" style="margin-top:5px">

            <div class="panel-heading">
                Cadastro de bloco
            </div>

            <div class="panel-body">

                <div class="row">
                    <div class="col-md-10">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NumBloco, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.NumBloco, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NumBloco, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-10">
                        <div class="form-group">
                            @Html.LabelFor(model => model.QtdAptos, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.QtdAptos, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.QtdAptos, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-10">
                        <div class="form-group">
                            @Html.LabelFor(model => model.AreaTotal, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.AreaTotal, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AreaTotal, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-10">
                        <div class="form-group">
                            @Html.LabelFor(model => model.CondominioId, "Condomínio", htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.DropDownList("CondominioId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CondominioId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-10">
                        <input type="submit" value="Salvar" class="btn btn-default" />
                        @Html.ActionLink("Retornar", "Index")
                    </div>
                </div>

            </div>

        </div>

    }
    
   

