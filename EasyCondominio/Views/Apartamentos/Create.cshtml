@model EasyCondominio.Models.Apartamento

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="panel panel-default" style="margin-top:5px">

        <div class="panel-heading">
            Cadastro de apartamento
        </div>

        <div class="panel-body">

            <div class="row">
                <div class="col-md-10">
                    <div class="form-group">
                        @Html.LabelFor(model => model.NumApto, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.NumApto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NumApto, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-10">
                    <div class="form-group">
                        @Html.LabelFor(model => model.BlocoId, "Bloco", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownList("BlocoId", null, string.Empty, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BlocoId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-10">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ProprietarioId, "Proprietário", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownList("ProprietarioId", null, string.Empty, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ProprietarioId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-10">
                    <input type="submit" value="Salvar" class="btn btn-default" />
                    @Html.ActionLink("Retornar", "Index")
                </div>
            </div>

        </div>

    </div>

}

