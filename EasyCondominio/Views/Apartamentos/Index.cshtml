@model IEnumerable<EasyCondominio.Models.Apartamento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NumApto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bloco.NumBloco)
        </th>
        <th>@Html.DisplayNameFor(model => model.Proprietario.Nome)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NumApto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bloco.NumBloco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Proprietario.Nome)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ApartamentoId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ApartamentoId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ApartamentoId })
        </td>
    </tr>
}

</table>
